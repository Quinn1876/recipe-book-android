<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".DropListFragment">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="250dp">
        <TextView
                android:text="Loading"
                android:layout_width="match_parent"
                android:layout_height="50dp" android:id="@+id/text_view_drop_list_title" android:textStyle="bold"
                android:textColor="@color/textPrimaryLight" android:textSize="18sp" android:paddingTop="12dp"
                android:paddingLeft="30dp" android:background="@color/colorPrimary"/>
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:paddingLeft="32dp" android:paddingRight="32dp"
                android:id="@+id/recycler_view_drop_list"/>
    </LinearLayout>
</FrameLayout>